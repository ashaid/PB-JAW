@{
    ViewData["Title"] = "Map Builder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PB_JAW.Models.TemplateModelMap

<div class="align-content-lg-center">
    <h1>Map Builder</h1>
    <button class="btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" id="Button" onclick="ButtonClick">
        Enable/Disable Starting Destination
    </button>
</div>
Select Building and Enter Room Number
<div class="align-content-lg-center">
    <form asp-action="SaveMap">
        <div class="collapse" id="collapseExample">
            <div>

                <div class="form-row">
                    @Html.DropDownListFor(
                    model => model.Maps[0].Building,
                    new SelectList(
                    new List<Object>
                    {
                    new { value = 0, text = "Business Education Complex" },
                    new { value = 1, text = "Patrick F. Taylor Hall" },
                    new { value = 2, text = "Lockett" }
                    },
                    "value",
                    "text",
                    Model.Maps[0].Building
                    )
                    )
                    <!----- <span asp-validation-for=" Model.Maps[0].Building" class="text-danger"></span> --->
                    <div class="col">
                        <input asp-for="@Model.Maps[0].RoomNumber" class="form-control" placeholder="Room Number" />
                    </div>
                    <span asp-validation-for="@Model.Maps[0].RoomNumber" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-row">

            @Html.DropDownListFor(
            model => model.Maps[1].Building,
            new SelectList(
            new List<Object>
            {
            new { value = 0, text = "Business Education Complex" },
            new { value = 1, text = "Patrick F. Taylor Hall" },
            new { value = 2, text = "Lockett" }
            },
            "value",
            "text",
            Model.Maps[1].Building
            )
            )
            <!----- <span asp-validation-for="@Model.Maps[1].Building" class="text-danger"></span> --->
            <div class="col">
                <input asp-for="@Model.Maps[1].RoomNumber" class="form-control" placeholder="Room Number" />
            </div>
            <span asp-validation-for="@Model.Maps[1].RoomNumber" class="text-danger"></span>
        </div>
        <div class="form-row">
            <input type="submit" value="Create" class="btn-lg" />
        </div>
    </form>
</div>

<script src="_framework/blazor.server.js"></script>
