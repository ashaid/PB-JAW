@model PB_JAW.Models.TemplateModelMap
@{
    ViewData["Title"] = "Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--------------------------------------------------------------------------------------------------------------------------
    This is a work around fix. If the user creates a map and clicks the "back arrow" on the browser the application will be
    confused because it cannot properly instantiate/close python.
--------------------------------------------------------------------------------------------------------------------------->
<META Http-Equiv="Cache-Control" Content="no-cache" />
<META Http-Equiv="Pragma" Content="no-cache" />
<META Http-Equiv="Expires" Content="0" />

<h1>Results:</h1>
<h2><small class="text-muted">Your starting and destination locations are highlighted in red and blue respectively.</small></h2>
<p>Current Time: @DateTime.Now.ToString("t")</p>
<p>@TempData["Times"]</p>
<p>@TempData["Directions"]</p>


@foreach (var String in (IEnumerable<String>)TempData["Maps"]) {
<div class="col">
    <img class="img-fluid" src="@Url.Content("~/created/" + String)" />
</div>
}



